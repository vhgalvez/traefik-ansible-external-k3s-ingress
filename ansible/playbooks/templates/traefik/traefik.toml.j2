[entryPoints]
  [entryPoints.web]
    address = ":80"
  [entryPoints.websecure]
    address = ":443"
  [entryPoints.traefik]
    address = ":8080"

[api]
  dashboard = true
  insecure = true  # ⚠️ Cambia a false cuando configures autenticación

[log]
  level = "DEBUG"

[providers.kubernetesIngress]
  kubeconfigFile = "/etc/traefik/traefik-kubeconfig.yaml"
  namespaces = ["default"]

[certificatesResolvers.default.acme]
  email = "{{ letsencrypt_email | default('admin@example.com') }}"
  storage = "/acme.json"
  [certificatesResolvers.default.acme.httpChallenge]
    entryPoint = "web"

[tls]
  [[tls.certificates]]
    certFile = "/etc/traefik/certs/traefik.crt"
    keyFile = "/etc/traefik/certs/traefik.key"
