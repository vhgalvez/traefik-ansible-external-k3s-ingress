[entryPoints]
  [entryPoints.web]
    address = ":80"

  [entryPoints.websecure]
    address = ":443"

  [entryPoints.traefik]
    address = ":8080"

[api]
  dashboard = true
  insecure = false  # Cambiado a false para una configuración más segura

[log]
  level = "DEBUG"

[providers.file]
  directory = "/etc/traefik/dynamic_conf"
  watch = true

[providers.kubernetesIngress]
  kubeconfig = "/etc/traefik/traefik-kubeconfig.yaml"  # Cambié "kubeconfigFile" a "kubeconfig"
  namespaces = ["default"]

[certificatesResolvers.default.acme]
  email = "{{ letsencrypt_email | default('admin@example.com') }}"
  storage = "/acme.json"
  [certificatesResolvers.default.acme.httpChallenge]
    entryPoint = "web"

[tls]
  [[tls.certificates]]
    certFile = "/etc/traefik/certs/traefik.crt"
    keyFile = "/etc/traefik/certs/traefik.key"

[http.middlewares]
  [http.middlewares.auth.basicAuth]
    users = ["admin:$apr1$Mv60e4y9$hzGGgjKKRz5yV6L.PTtji."]

[http.routers]
  [http.routers.traefik]
    rule = "Host(`traefik.local`)"
    entryPoints = ["traefik"]
    middlewares = ["auth"]
    service = "api@internal"