[entryPoints]
  [entryPoints.web]
    address = ":80"
    [entryPoints.web.http.redirections.entryPoint]
      to = "websecure"
      scheme = "https"
  [entryPoints.websecure]
    address = ":443"
  [entryPoints.traefik]
    address = ":8080"

[api]
  dashboard = true
  insecure = false

[log]
  level = "DEBUG"

[providers]
  [providers.file]
    directory = "/etc/traefik/dynamic_conf"
    watch = true

  [providers.kubernetesIngress]
    kubeconfig = "/etc/traefik/traefik-kubeconfig.yaml"
    namespaces = ["default"]

[certificatesResolvers]
  [certificatesResolvers.default.acme]
    email = "admin@example.com"
    storage = "/acme.json"
    [certificatesResolvers.default.acme.httpChallenge]
      entryPoint = "web"

[tls]
  [[tls.certificates]]
    certFile = "/etc/traefik/certs/traefik.crt"
    keyFile = "/etc/traefik/certs/traefik.key"

[http.middlewares]
  [http.middlewares.auth.basicAuth]
    users = ["admin:$apr1$Mv60e4y9$hzGGgjKKRz5yV6L.PTtji."]
  [http.middlewares.ipwhitelist.ipWhiteList]
    sourceRange = ["10.17.0.0/16", "192.168.0.0/24"]

[http.routers]
  [http.routers.traefik]
    rule = "Host(`traefik.local`)"
    entryPoints = ["traefik"]
    middlewares = ["auth", "ipwhitelist"]
    service = "api@internal"