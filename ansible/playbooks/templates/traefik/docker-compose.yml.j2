version: "3.9"

services:
  traefik:
    image: traefik:v3.0
    container_name: traefik
    restart: unless-stopped
    ports:
      - "80:80"         # HTTP
      - "443:443"       # HTTPS
      - "8080:8080"     # Traefik Dashboard (⚠️ cambiar seguridad más adelante)
    volumes:
      - {{ traefik_config_dir }}/traefik.toml:/etc/traefik/traefik.toml:ro
      - {{ traefik_config_dir }}/acme.json:/acme.json
      - {{ traefik_config_dir }}/certs:/etc/traefik/certs:ro
      - {{ kubeconfig_path }}:/etc/traefik/kubeconfig:ro
    environment:
      - KUBERNETES_SERVER=https://{{ vip }}:6443
      - TRAEFIK_NAMESPACE=traefik
      - TRAEFIK_CONFIG_DIR={{ traefik_dir }}
      - TLS_CERT_FILE={{ traefik_dir }}/certs/traefik.local.crt
      - TLS_KEY_FILE={{ traefik_dir }}/certs/traefik.local.key
      - KUBECONFIG=/etc/traefik/traefik-kubeconfig.yaml  # Asegúrate de que kubeconfig esté correctamente montado
      - KUBERNETES_INSECURE_SKIP_TLS_VERIFY=false  # Para evitar la verificación del TLS si es necesario