version: "3.9"

services:
  traefik:
    image: traefik:v3.0
    container_name: traefik
    restart: unless-stopped
    ports:
      - "80:80"         # HTTP
      - "443:443"       # HTTPS
      - "8080:8080"     # Traefik Dashboard (⚠️ cambiar seguridad más adelante)
    volumes:
      - /etc/traefik/traefik.toml:/etc/traefik/traefik.toml:ro
      - /etc/traefik/acme.json:/acme.json
      - /etc/traefik/certs:/etc/traefik/certs:ro
      - /etc/traefik/traefik-kubeconfig.yaml:/var/run/secrets/kubernetes.io/serviceaccount/token:ro
    environment:
      - KUBERNETES_INSECURE_SKIP_TLS_VERIFY=false