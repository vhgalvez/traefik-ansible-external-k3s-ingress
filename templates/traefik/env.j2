# Traefik Environment Variables

# Token para autenticar contra el clúster Kubernetes (ServiceAccount traefik-ingress-controller)
TRAEFIK_TOKEN={{ sa_token.stdout }}

# Dirección VIP del API server del clúster Kubernetes
KUBERNETES_SERVER=https://{{ vip }}:6443

# Namespace donde correrá Traefik
TRAEFIK_NAMESPACE=traefik

# Directorio de configuración
TRAEFIK_CONFIG_DIR=/etc/traefik

# Ruta del archivo kubeconfig local (generado dinámicamente)
KUBECONFIG={{ traefik_dir }}/kubeconfig

# Certificados TLS (ya están copiados)
TLS_CERT_FILE={{ traefik_dir }}/certs/traefik.local.crt
TLS_KEY_FILE={{ traefik_dir }}/certs/traefik.local.key